<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsoc"
    tools:context=".Fragment_apk">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:background="@drawable/cards1"
            android:layout_height="200dp">

            <ImageButton
                android:id="@+id/ibcamara"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/camara" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:background="@drawable/cards1"
            android:layout_height="200dp">
            <ImageButton
                android:id="@+id/ibgmail"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/gmail" />
        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="360dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:background="@drawable/cards1"
            android:layout_height="200dp">

            <ImageButton
                android:id="@+id/ibmaps"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:src="@drawable/googlemaps" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:background="@drawable/cards1"
            android:layout_height="200dp">
            <ImageButton
                android:id="@+id/ibyoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:src="@drawable/youtube" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</FrameLayout>